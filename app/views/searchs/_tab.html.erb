<div class="tab-wrapper">
  <% if @tag %>
    <% @tag.each do |tag| %>
      <div><%= tag %></div>
    <% end %>
    <ul class="tab-list list-unstyled row">
      <li class="tab tab-active">タブ1</li>
      <li class="tab">タブ2</li>
      <li class="tab">タブ3</li>
    </ul>
  <% end %>

  <div class="">
    <ul>
      <li>1</li>
      <li>2</li>
      <li>3</li>
    </ul>
  </div>
</div>

<%= form_with model: @tag, class: 'row' do |f| %>
  <div class="form-group">
    <%= f.text_field :word, placeholder: 'キーワード', class: 'mr-2' %>
  </div>
  <div class="form-group">
    <%= f.submit '登録', class: 'btn btn-sm btn-info' %>
  </div>
<% end %>

