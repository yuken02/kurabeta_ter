<div class="container">
  <div class="row my-3 justify-content-center">
    <%= render 'layouts/main_head' %>
  </div>

  <div class="row">
    <h2 class="col-12 my-3">トレンドトップ30</h2>
    <div class="col-md-6">
      <table class="table table-hover table-inverse">
        <tbody>
          <% @trends.each_with_index do |trend, i| %>
            <% if i >= 15 %>
              <% break %>
            <% else %>
              <tr>
                <td class="px-0">
                  <%= i+1 %>.
                </td>
                <td class="pl-0 col-6">
                  <a href="<%= trend[:url] %>" class="col-md-2"> <%= trend[:name] %> </a>
                </td>
                <td>
                  <%= trend[:tweet_volume] %><% if trend[:tweet_volume] %> 件のツイート<% end %>
                </td>
                <td class="pl-0">
                  <a href="/search?keyword=<%= trend[:name] %>">グラフ</a>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-6">
      <table class="table table-hover table-inverse">
        <tbody>
          <% @trends.each_with_index do |trend, i| %>
            <% if i <= 14 %>
              <% next %>
            <% else %>
              <tr>
                <td class="px-0">
                  <%= i+1 %>.
                </td>
                <td class="pl-0">
                  <a href="<%= trend[:url] %>" class="col-md-2"> <%= trend[:name] %> </a>
                </td>
                <td>
                  <%= trend[:tweet_volume] %><% if trend[:tweet_volume] %> 件のツイート<% end %>
                </td>
                <td>
                  <a href="/search?keyword=<%= trend[:name] %>">グラフ</a>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="row">
      <div class="col-11">
        <!-- memo -->
        <a href="<%= @trends[0][:url] %>"><%= @trends[0][:name] %></a><br><span><%= @trends[0][:tweet_volume] %>件のツイート</span><span><br></span>
        <a href="<%= @trends[2][:url] %>"><%= @trends[2][:name] %></a><span><%= @trends[2][:tweet_volume] %></span><br>
        <!--.to_s(:delimited)-->
        <p class="text-wrap">
          <%= @trends %>
        </p>
      </div>
      <div class="col-1">test</div>
    </div>

  </div>
</div>
