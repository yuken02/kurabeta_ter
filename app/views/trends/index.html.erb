<div class="container">
  <div class="row my-3">
    <a href="/trends" class="btn btn-info rounded-pill d-flex align-items-center mr-3"><span>トレンド</span></a>
    <a href="/searchs" class="btn btn-info rounded-pill d-flex align-items-center ml-3"><span>気になるワード<span></span></a>
    <div class="ml-md-5">
      <%= form_with url: "searchs_path",method: :get do |form| %>
        <%= form.text_field :keyword %>
        <button title="検索" type="submit">検索</button>
      <% end %>
    </div>
  </div>
  <div class="row">
    <h2 class="my-2">トレンドランキング</h2>
    <% @trends.each do |trend| %>
    <table class="table table-hover table-inverse">
      <tbody>
        <td class="col-md-6"><a href="<%= trend[:url] %>" class="col-md-2"><%= trend[:name] %></td>
        <td><%= trend[:tweet_volume] %> <% if trend[:tweet_volume] %>件のツイート<% end %></td>
      </tbody>
    </table>
    <% end %>
  </div>
    <a href="<%= @trends[0][:url] %>"><%= @trends[0][:name] %></a><br><span><%= @trends[0][:tweet_volume] %>件のツイート</span><span><br></span>
    <a href="<%= @trends[2][:url] %>"><%= @trends[2][:name] %></a><span><%= @trends[2][:tweet_volume] %></span><br>
    <!--.to_s(:delimited)-->
</div>