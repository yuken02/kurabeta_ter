<div class="container">
  <div class="row my-3 justify-content-center">
    <%= render 'layouts/main_head' %>
  </div>

  <div class="row">
    <h2 class="my-2">トレンドトップ30</h2>
    <table class="table table-hover table-inverse">
      <tbody>
        <% @trends.each_with_index do |trend, i| %>
          <tr>
            <td>
              <%= i+1 %>.
            </td>
            <td class="col-md-6">
              <a href="<%= trend[:url] %>" class="col-md-2"> <%= trend[:name] %> </a>
            </td>
            <td>
              <%= trend[:tweet_volume] %><% if trend[:tweet_volume] %> 件のツイート<% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

