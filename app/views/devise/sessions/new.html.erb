<div class="container">
  <div class="row my-5 justify-content-center">
    <div class="card mx-auto p-5">
      <div class="mx-auto">
        <h2 class="my-3">ログイン</h2>
      </div>

      <div class="mx-md-5">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field mb-2">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", class: "col-12" %>
          </div>

          <div class="field mb-2">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, required: true, autocomplete: "current-password", class: "col-12" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field mb-1">
              <%= f.check_box :remember_me %>
              <%= f.label :ログイン状態を保持する %>
            </div>
          <% end %>

          <div class="actions mb-4">
            <%= f.submit "ログイン",class: "px-2" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>