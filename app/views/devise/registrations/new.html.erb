<div class="container">
  <div class="row my-5 justify-content-center">
    <div class="card mx-auto p-5">
      <div class="mx-auto">
        <h2 class="my-3">新規アカウントを作成</h2>
      </div>

      <div class="mx-md-5">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field mb-2">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", class: "col-12" %>
          </div>

          <div class="field mb-2">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, required: true, autocomplete: "new-password" %>
          </div>

          <div class="field mb-3">
            <%= f.label :パスワードの確認 %><br />
            <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password" %>
          </div>

          <div class="actions mb-3">
            <%= f.submit "新規登録", class: "px-2" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
